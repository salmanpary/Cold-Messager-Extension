{
  "manifest_version": 3,
  "name": "Cold Messager",
  "short_name": "CM",
  "version": "0.0.1",
  "description": "Send personalized messages to your Linkedin connections",
  "author":"salmanpary@gmail.com",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": ["webNavigation", 
    "activeTab",
    "storage"
  ],
  "web_accessible_resources": [
    {
      "resources": ["index.html", "js/*.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentscript.js"]
    }
  ],
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}