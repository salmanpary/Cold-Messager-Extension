{
  "manifest_version": 3,
  "name": "Cold Messager",
  "short_name": "CM",
  "version": "0.0.1",
  "description": "Send personalized messages to your Linkedin connections",
  "icons": {
    "16": "/icons/icon16.png",
    "32": "/icons/icon32.png",
    "48": "/icons/icon48.png",
    "192": "/icons/icon192.png"
  },
  "permissions": ["webNavigation", "activeTab"],
  "web_accessible_resources": [
    {
      "resources": ["index.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["contentscript.js"]
    }
  ],
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "index.html"
  }
}
